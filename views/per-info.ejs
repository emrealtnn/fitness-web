    <script>
        function vkihesapla() {

            var boy = document.getElementById("boy").value / 100;
            var kilo = document.getElementById("kilo").value;

            var b = Number(boy);
            var k = Number(kilo);

            var ind = k / (b * b);
            document.getElementById("sonuc").innerHTML = "Vücut Kitle İndeksi:"
            document.getElementById("sonuc").innerHTML += ind.toFixed(2)

            if (ind < 18){
                document.getElementById("olcu").innerHTML = "Zayıf";
                document.getElementById("oneri").innerHTML= "Kilo alma programlarımıza bakabilirsiniz.";
            }
            else if (ind >= 18 && ind < 25){
                document.getElementById("olcu").innerHTML = "Normal";
                document.getElementById("oneri").innerHTML= "Form koruma programlarımıza bakabilirsiniz.";
            }
            else if (ind >= 25 && ind < 30){
                document.getElementById("olcu").innerHTML = "Kilolu";
                document.getElementById("oneri").innerHTML= "Kilo verme programlarımıza bakabilirsiniz.";
            }
            else if (ind >= 30 && ind < 40){
                document.getElementById("olcu").innerHTML = "Obez";
                document.getElementById("oneri").innerHTML= "Kilo verme programlarımıza bakabilirsiniz.";
            }
            else if (ind >= 40 && ind < 100){
                document.getElementById("olcu").innerHTML = "İleri Derece Obez";
                document.getElementById("oneri").innerHTML= "Kilo verme programlarımıza bakabilirsiniz.";
            }
            else {
                document.getElementById("olcu").innerHTML = "Tekrar Deneyiniz...";
            }
        }
    </script>

